# CTB/SYS/API Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/client_subhive
DATABASE_POOL_SIZE=10
DATABASE_SSL=true

# ============================================================================
# MCP SERVERS
# ============================================================================
GARAGE_MCP_URL=http://localhost:7001
GARAGE_MCP_TOKEN=local-dev-only

COMPOSIO_MCP_URL=http://localhost:3001
COMPOSIO_API_KEY=your-composio-api-key
COMPOSIO_API_URL=https://api.composio.dev

# ============================================================================
# SIDECAR & TELEMETRY
# ============================================================================
IMOCREATOR_SIDECAR_URL=http://localhost:8000
IMOCREATOR_BEARER_TOKEN=local-dev-only
IMOCREATOR_MCP_URL=http://localhost:7001

# ============================================================================
# HEIR ERROR HANDLING
# ============================================================================
HEIR_MAX_RETRIES=3
HEIR_LOG_TO_MASTER=true
IMO_MASTER_ERROR_ENDPOINT=http://localhost:8000/errors
ERROR_LOG_PATH=./logs/errors.ndjson

# ============================================================================
# FIREBASE
# ============================================================================
FIREBASE_PROJECT_ID=client-subhive
FIREBASE_PRIVATE_KEY_PATH=/path/to/service-account.json
FIREBASE_CLIENT_EMAIL=service@client-subhive.iam.gserviceaccount.com

# ============================================================================
# API KEYS
# ============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
LLM_DEFAULT_PROVIDER=openai

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=your-jwt-secret-key-change-this
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_COMPLIANCE_CHECKS=true
ENABLE_AUTO_TAGGING=true
ENABLE_AUTO_REMEDIATION=true
ENABLE_TELEMETRY=true

# ============================================================================
# CTB CONFIGURATION
# ============================================================================
CTB_FACTORY_PATH=ctb/sys/global-factory
CTB_MIN_SCORE=90
CTB_AUTO_FIX=true

# ============================================================================
# DEPLOYMENT
# ============================================================================
DEPLOY_ENVIRONMENT=development
DEPLOY_REGION=us-east-1
HEALTH_CHECK_INTERVAL=30000

# ============================================================================
# MONITORING
# ============================================================================
SENTRY_DSN=
DATADOG_API_KEY=
NEWRELIC_LICENSE_KEY=
