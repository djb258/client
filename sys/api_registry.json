{
  "api_version": "v1",
  "database": "clnt",
  "schemas": {
    "core": {
      "description": "Master identity schema for companies and employees.",
      "tables": {
        "company_master": {
          "methods": ["GET", "POST", "PATCH"],
          "keys": ["company_uid"],
          "relations": ["employee_master", "entity_relationship"]
        },
        "employee_master": {
          "methods": ["GET", "POST", "PATCH"],
          "keys": ["employee_uid"],
          "relations": ["company_master", "employee_vendor_id"]
        },
        "entity_relationship": {
          "methods": ["GET", "POST"],
          "keys": ["relationship_id"],
          "relations": ["company_master", "employee_master"]
        }
      }
    },
    "benefits": {
      "description": "Vendor linkage and plan enrollment tracking.",
      "tables": {
        "vendor_link": {
          "methods": ["GET", "POST"],
          "keys": ["vendor_id"],
          "relations": ["company_master", "employee_vendor_id"]
        },
        "employee_vendor_id": {
          "methods": ["GET", "POST", "PATCH"],
          "keys": ["vendor_emp_uid"],
          "relations": ["employee_master", "vendor_link"]
        }
      }
    },
    "compliance": {
      "description": "Compliance vault and rule tracking per company and employee.",
      "tables": {
        "compliance_vault": {
          "methods": ["GET", "POST", "PATCH"],
          "keys": ["compliance_id"],
          "relations": ["company_master"]
        }
      }
    },
    "operations": {
      "description": "Audit and operational tracking schema.",
      "tables": {
        "audit_data_lineage": {
          "methods": ["GET", "POST"],
          "keys": ["lineage_id"],
          "relations": []
        }
      }
    },
    "staging": {
      "description": "Raw intake area for data ingestion and validation.",
      "tables": {
        "raw_intake_company": {
          "methods": ["GET", "POST"],
          "keys": ["intake_id"],
          "relations": []
        },
        "raw_intake_employee": {
          "methods": ["GET", "POST"],
          "keys": ["intake_id"],
          "relations": []
        }
      }
    }
  },
  "access_control": {
    "default_mode": "readwrite",
    "gatekeeper": "validator_agent",
    "roles": {
      "n8n": ["read", "write"],
      "composio": ["read", "write"],
      "builder.io": ["read"],
      "lovable.dev": ["readwrite"],
      "firebase": ["readwrite"]
    }
  },
  "doctrine_metadata": {
    "version": "STAMPED-SPVPET-v1.0",
    "validated_by": "Barton Validator Agent",
    "enforced_fields": ["column_number", "column_description", "column_format"]
  }
}
